{% set color = theme_color|default('blue') %}
{% set ring_class = 'focus:ring-' ~ color ~ '-500' %}
{% set bg_button = 'bg-' ~ color ~ '-600' %}
{% set bg_button_hover = 'hover:bg-' ~ color ~ '-700' %}
{% set shadow_button = 'shadow-' ~ color ~ '-200' %}

    {{ form_start(form, {'attr': {'class': 'space-y-10', 'novalidate': 'novalidate'}}) }}
        
        {% if not form.vars.valid %}
            <div class="bg-red-50 border-l-4 border-red-500 p-6 rounded-2xl mb-8 animate-bounce">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <i class="fa-solid fa-circle-exclamation text-red-500 text-xl"></i>
                    </div>
                    <div class="ml-4">
                        <h3 class="text-sm font-black text-red-800 uppercase tracking-widest">Attention : Erreurs détectées</h3>
                        <div class="mt-2 text-sm text-red-700">
                            {{ form_errors(form) }}
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

        <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-10">
            {% for child in form %}
                {% if child.vars.name != '_token' %}
                    <div class="space-y-4 group">
                        {{ form_label(child, null, {'label_attr': {'class': 'block text-[11px] font-black text-slate-400 uppercase tracking-[0.2em] group-focus-within:text-' ~ color ~ '-600 transition-colors'}}) }}
                        
                        <div class="relative">
                            {% if child.vars.expanded is defined and child.vars.expanded %}
                                <div class="p-6 bg-slate-50/50 rounded-[2rem] border border-slate-100 flex flex-wrap gap-4">
                                    {{ form_widget(child) }}
                                </div>
                            {% else %}
                                {{ form_widget(child, {'attr': {'class': 'w-full px-6 py-4.5 rounded-2xl border border-slate-100 bg-slate-50/50 focus:bg-white focus:ring-4 focus:ring-' ~ color ~ '-500/10 focus:border-' ~ color ~ '-500 transition-all duration-300 font-bold text-slate-700 placeholder:text-slate-300'}}) }}
                            {% endif %}
                        </div>

                        {% if child.vars.help is defined and child.vars.help %}
                            <p class="text-[10px] text-slate-400 font-bold italic pl-1">{{ child.vars.help }}</p>
                        {% endif %}

                        {% if not child.vars.valid %}
                            <div class="text-red-500 text-[11px] font-black mt-3 flex items-center gap-2 pl-1 bg-red-50 py-2 px-3 rounded-lg border border-red-100">
                                <i class="fa-solid fa-triangle-exclamation"></i>
                                {{ form_errors(child) }}
                            </div>
                        {% endif %}
                    </div>
                {% endif %}
            {% endfor %}
        </div>

        <div class="pt-12 border-t border-slate-50 flex justify-end gap-6 items-center">
            <a href="javascript:history.back()" class="text-xs font-black text-slate-400 hover:text-slate-600 transition-colors uppercase tracking-widest">Annuler</a>
            <button type="submit" class="group relative inline-flex items-center justify-center px-12 py-5 font-black text-white transition-all duration-300 {{ bg_button }} rounded-2xl {{ bg_button_hover }} shadow-2xl {{ shadow_button }} hover:-translate-y-1">
                <i class="fa-solid fa-save mr-3 group-hover:rotate-12 transition-transform"></i>
                {{ button_label|default('Enregistrer les modifications') }}
            </button>
        </div>

        {{ form_rest(form) }}
    {{ form_end(form) }}
</div>

<style>
    /* Styling for expanded checkbox lists */
    input[type="checkbox"], input[type="radio"] {
        width: 1.25rem;
        height: 1.25rem;
        border-radius: 0.5rem;
        border-color: #e2e8f0;
        color: {{ color == 'blue' ? '#2563eb' : (color == 'emerald' ? '#10b981' : '#4f46e5') }};
        cursor: pointer;
    }
    .form-check {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: white;
        border-radius: 1rem;
        border: 1px solid #f1f5f9;
        transition: all 0.2s;
    }
    .form-check:hover {
        background: #f8fafc;
        border-color: #e2e8f0;
    }
</style>
