{% extends 'admin_base.html.twig' %}

{% block title %}Gestion des Ordonnances{% endblock %}

{% block body %}
<div class="px-4 py-6">
    <!-- Header Section -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-10">
        <div>
            <h1 class="text-4xl font-black text-slate-800 tracking-tight">Ordonnances</h1>
            <p class="text-slate-500 font-medium">Prescriptions et suivis thérapeutiques.</p>
        </div>
        <a href="{{ path('app_ordonnance_new') }}" class="group relative inline-flex items-center justify-center px-8 py-3.5 font-bold text-white transition-all duration-200 bg-indigo-600 font-pj rounded-2xl focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 hover:bg-indigo-700 shadow-xl shadow-indigo-200">
            <i class="fa-solid fa-file-prescription mr-2 group-hover:scale-110 transition-transform duration-300"></i>
            Nouvelle Ordonnance
        </a>
    </div>

    <!-- Quick Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
        <div class="bg-indigo-600 p-8 rounded-[2.5rem] text-white shadow-2xl shadow-indigo-100 flex items-center justify-between group overflow-hidden relative">
            <div class="relative z-10">
                <p class="text-indigo-100 text-xs font-black uppercase tracking-widest mb-2">Total</p>
                <h3 class="text-4xl font-black">{{ ordonnances|length }}</h3>
            </div>
            <i class="fa-solid fa-scroll absolute -right-6 -bottom-6 text-9xl text-white/10 group-hover:rotate-12 transition-transform duration-500"></i>
        </div>
        <div class="bg-white p-6 rounded-[2.5rem] border border-slate-100 shadow-xl flex items-center gap-6 hover:shadow-2xl transition-all duration-300">
            <div class="w-16 h-16 bg-blue-50 rounded-2xl flex items-center justify-center text-blue-500 text-2xl">
                <i class="fa-solid fa-user-md"></i>
            </div>
            <div>
                <p class="text-slate-400 text-xs font-bold uppercase tracking-wider">Médecins</p>
                <h3 class="text-xl font-black text-slate-700">Multiples</h3>
            </div>
        </div>
        <div class="bg-white p-6 rounded-[2.5rem] border border-slate-100 shadow-xl flex items-center gap-6 hover:shadow-2xl transition-all duration-300">
            <div class="w-16 h-16 bg-purple-50 rounded-2xl flex items-center justify-center text-purple-500 text-2xl">
                <i class="fa-solid fa-clock-history"></i>
            </div>
            <div>
                <p class="text-slate-400 text-xs font-bold uppercase tracking-wider">Moyenne Durée</p>
                <h3 class="text-xl font-black text-slate-700">Calcul...</h3>
            </div>
        </div>
    </div>

    <!-- Enhanced Search & Filter -->
    <div class="bg-white/70 backdrop-blur-xl p-8 rounded-[3rem] border border-white shadow-2xl shadow-slate-200/60 mb-10 relative overflow-hidden">
        <div class="absolute top-0 right-0 w-64 h-64 bg-indigo-50/50 rounded-full blur-3xl -mr-32 -mt-32"></div>
        
        <form method="get" id="search-form" class="relative z-10 flex flex-col lg:flex-row items-center gap-8">
            <div class="relative w-full lg:flex-1 group">
                <i class="fa-solid fa-search absolute left-5 top-1/2 -translate-y-1/2 text-slate-300 group-focus-within:text-indigo-500 transition-colors"></i>
                <input type="text" name="search" value="{{ search }}" 
                    class="w-full pl-14 pr-6 py-5 bg-white border border-slate-100 rounded-3xl focus:ring-4 focus:ring-indigo-500/10 focus:border-indigo-500/50 transition-all duration-300 font-bold text-slate-700 placeholder:text-slate-300"
                    placeholder="Rechercher une posologie, un médecin..." id="search-input">
            </div>
            
            <div class="flex items-center gap-4 w-full lg:w-auto">
                <div class="relative flex-1 lg:w-56">
                    <select name="sortBy" onchange="this.form.submit()" 
                        class="w-full pl-6 pr-12 py-5 bg-white border border-slate-100 rounded-3xl focus:ring-4 focus:ring-indigo-500/10 appearance-none font-black text-slate-600">
                        <option value="posologie" {% if sortBy == 'posologie' %}selected{% endif %}>Par Posologie</option>
                        <option value="frequence" {% if sortBy == 'frequence' %}selected{% endif %}>Par Fréquence</option>
                        <option value="dureeTraitement" {% if sortBy == 'dureeTraitement' %}selected{% endif %}>Par Durée</option>
                    </select>
                    <i class="fa-solid fa-chevron-down absolute right-6 top-1/2 -translate-y-1/2 text-slate-300"></i>
                </div>

                <div class="relative flex-1 lg:w-44">
                    <select name="sortOrder" onchange="this.form.submit()"
                        class="w-full pl-6 pr-12 py-5 bg-white border border-slate-100 rounded-3xl focus:ring-4 focus:ring-indigo-500/10 appearance-none font-black text-slate-600">
                        <option value="ASC" {% if sortOrder == 'ASC' %}selected{% endif %}>Croissant</option>
                        <option value="DESC" {% if sortOrder == 'DESC' %}selected{% endif %}>Décroissant</option>
                    </select>
                    <i class="fa-solid fa-sort-amount-down absolute right-6 top-1/2 -translate-y-1/2 text-slate-300"></i>
                </div>
            </div>
        </form>
    </div>

    <!-- Prescription Table Card -->
    <div class="bg-white rounded-[3rem] overflow-hidden border border-slate-100 shadow-2xl">
        <table class="w-full text-left border-separate border-spacing-0">
            <thead>
                <tr class="bg-indigo-50/30">
                    <th class="px-10 py-6 text-[10px] font-black text-indigo-400 uppercase tracking-[0.2em]">Détails Prescription</th>
                    <th class="px-10 py-6 text-[10px] font-black text-indigo-400 uppercase tracking-[0.2em]">Durée & Rythme</th>
                    <th class="px-10 py-6 text-[10px] font-black text-indigo-400 uppercase tracking-[0.2em]">Médecin Référent</th>
                    <th class="px-10 py-6 text-[10px] font-black text-indigo-400 uppercase tracking-[0.2em] text-right">Actions</th>
                </tr>
            </thead>
            <tbody id="table-body">
                {% for ordonnance in ordonnances %}
                    <tr class="group hover:bg-slate-50/80 transition-all duration-500">
                        <td class="px-10 py-8 border-b border-slate-50">
                            <div class="flex items-center gap-5">
                                <div class="w-14 h-14 bg-white rounded-[1.25rem] shadow-lg shadow-indigo-100 border border-slate-100 flex items-center justify-center text-indigo-500 group-hover:scale-110 group-hover:rotate-3 transition-all duration-500">
                                    <i class="fa-solid fa-prescription text-2xl"></i>
                                </div>
                                <div>
                                    <div class="font-black text-slate-700 text-lg leading-tight">{{ ordonnance.posologie }}</div>
                                    <div class="text-xs font-bold text-slate-400 mt-1 flex items-center gap-2">
                                        <i class="fa-solid fa-hashtag text-[10px]"></i>
                                        ID-{{ ordonnance.id }} | Fiche #{{ ordonnance.idFiche.id }}
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td class="px-10 py-8 border-b border-slate-50">
                            <div class="space-y-2">
                                <div class="flex items-center gap-2">
                                    <span class="w-2 h-2 rounded-full bg-indigo-500 shadow-[0_0_8px_rgba(99,102,241,0.5)]"></span>
                                    <span class="font-black text-slate-700">{{ ordonnance.dureeTraitement }} Jours</span>
                                </div>
                                <div class="text-xs font-bold text-slate-400 pl-4 italic">{{ ordonnance.frequence }}</div>
                            </div>
                        </td>
                        <td class="px-10 py-8 border-b border-slate-50">
                            <div class="flex items-center gap-3">
                                <div class="w-8 h-8 rounded-full bg-slate-100 flex items-center justify-center text-slate-400 text-xs font-black">
                                    {{ ordonnance.idU.email|first|upper }}
                                </div>
                                <span class="font-bold text-blue-600 hover:underline cursor-pointer tracking-tight">{{ ordonnance.idU.email }}</span>
                            </div>
                        </td>
                        <td class="px-10 py-8 border-b border-slate-50 text-right">
                            <div class="flex items-center justify-end gap-3 opacity-0 group-hover:opacity-100 transition-all duration-500 translate-x-10 group-hover:translate-x-0">
                                <a href="{{ path('app_ordonnance_show', {'id': ordonnance.id}) }}" 
                                    class="w-12 h-12 rounded-2xl bg-blue-50 text-blue-600 flex items-center justify-center hover:bg-blue-600 hover:text-white transition-all shadow-xl shadow-blue-100 hover:translate-y-[-4px]">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                <a href="{{ path('app_ordonnance_edit', {'id': ordonnance.id}) }}" 
                                    class="w-12 h-12 rounded-2xl bg-amber-50 text-amber-600 flex items-center justify-center hover:bg-amber-600 hover:text-white transition-all shadow-xl shadow-amber-100 hover:translate-y-[-4px]">
                                    <i class="fa-solid fa-edit"></i>
                                </a>
                                {{ include('ordonnance/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="px-10 py-32 text-center">
                            <div class="flex flex-col items-center">
                                <div class="w-24 h-24 bg-slate-50 rounded-[2rem] flex items-center justify-center mb-6">
                                    <i class="fa-solid fa-folder-open text-4xl text-slate-200"></i>
                                </div>
                                <h3 class="text-xl font-black text-slate-300">Aucune ordonnance enregistrée</h3>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('search-input');
    const searchForm = document.getElementById('search-form');
    let timeout = null;

    searchInput.addEventListener('input', function() {
        clearTimeout(timeout);
        timeout = setTimeout(() => {
            searchForm.submit();
        }, 500);
    });
});
</script>

<style>
    @keyframes slideIn {
        from { opacity: 0; transform: translateX(-20px); }
        to { opacity: 1; transform: translateX(0); }
    }
    #table-body tr { animation: slideIn 0.5s ease-out forwards; }
    {% for i in range(1, 15) %}
    #table-body tr:nth-child({{ i }}) { animation-delay: {{ i * 0.08 }}s; }
    {% endfor %}
</style>
{% endblock %}
