  <script>
function openAddRdvModal() {
    fetch('/rdv/front/AjouterRdv')
        .then(res => res.text())
        .then(html => {
            document.getElementById('rdvModalContent').innerHTML = html;
            openRdvModal();
        });
}

function openEditRdvModal(id) {
    fetch(`/rdv/front/ModifierRdv/${id}`)
        .then(res => res.text())
        .then(html => {
            document.getElementById('rdvModalContent').innerHTML = html;
            openRdvModal();
        });
}

function openRdvModal() {
    document.getElementById('rdvModal').classList.remove('hidden');
}

function closeRdvModal() {
    document.getElementById('rdvModal').classList.add('hidden');
}
