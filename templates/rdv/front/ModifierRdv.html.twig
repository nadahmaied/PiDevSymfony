<div class="space-y-5">
    <div class="flex items-center gap-3 mb-6">
        <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
            <i class="fa-solid fa-pen text-blue-600 text-xl"></i>
        </div>
        <div>
            <h3 class="text-xl font-bold text-slate-800">Modifier le rendez-vous</h3>
            <p class="text-sm text-slate-500">Modifiez les informations de votre rendez-vous</p>
        </div>
    </div>

{{ form_start(form, {
    action: path('editForm', {'id': app.request.attributes.get('id')}),
    method: 'POST',
    attr: {'class': 'space-y-4'}
}) }}

    
    <div>
        <label class="block text-sm font-bold text-slate-700 mb-2">
            Médecin
        </label>
        {{ form_widget(form.medecin, {
            'attr': {
                'class': 'w-full px-4 py-3 border border-slate-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition',
                'placeholder': 'Choisir un médecin'
            }
        }) }}
        {{ form_errors(form.medecin) }}
    </div>

    <div>
        <label class="block text-sm font-bold text-slate-700 mb-2">
            Motif
        </label>
        {{ form_widget(form.motif, {
            'attr': {
                'class': 'w-full px-4 py-3 border border-slate-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition',
                'placeholder': 'Choisir un motif'
            }
        }) }}
        {{ form_errors(form.motif) }}
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
            <label class="block text-sm font-bold text-slate-700 mb-2">
                Date
            </label>
            {{ form_widget(form.date, {
                'attr': {
                    'class': 'w-full px-4 py-3 border border-slate-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition',
                    'placeholder': 'jj/mm/aaaa'
                }
            }) }}
            {{ form_errors(form.date) }}
        </div>

        <div>
            <label class="block text-sm font-bold text-slate-700 mb-2">
                Heure de début
            </label>
            {{ form_widget(form.hdebut, {
                'attr': {
                    'class': 'w-full px-4 py-3 border border-slate-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition',
                    'placeholder': '--:-- --'
                }
            }) }}
            {{ form_errors(form.hdebut) }}
        </div>
    </div>

    <div>
        <label class="block text-sm font-bold text-slate-700 mb-2">
            Message
        </label>
        {{ form_widget(form.message, {
            'attr': {
                'class': 'w-full px-4 py-3 border border-slate-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition resize-none',
                'placeholder': 'Entrez votre message ...',
                'rows': '4'
            }
        }) }}
        {{ form_errors(form.message) }}
    </div>

    <div class="flex gap-3 pt-4">
        <button 
            type="button" 
            onclick="closeRdvModal()" 
            class="flex-1 px-6 py-3 bg-slate-100 hover:bg-slate-200 text-slate-700 font-bold rounded-xl transition">
            Annuler
        </button>
        <button 
            type="submit" 
            class="flex-1 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-xl transition shadow-lg">
            Enregistrer
        </button>
    </div>

    {{ form_end(form) }}
</div>
