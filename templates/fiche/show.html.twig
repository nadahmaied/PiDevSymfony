{% extends 'admin_base.html.twig' %}

{% block title %}Fiche Médicale : {{ fiche.idU.email }}{% endblock %}

{% block body %}
<div class="max-w-5xl mx-auto px-4 py-8">
    <!-- Header -->
    <div class="flex items-center justify-between mb-10">
        <div>
            <h1 class="text-4xl font-black text-slate-800 tracking-tight">Dossier Médical</h1>
            <p class="text-slate-500 font-medium italic tracking-tight">{{ fiche.date ? fiche.date|date('d F Y') : 'Date inconnue' }}</p>
        </div>
        <div class="flex items-center gap-4">
            <a href="{{ path('app_fiche_index') }}" class="bg-slate-100 text-slate-600 px-6 py-3 rounded-2xl font-bold hover:bg-slate-200 transition-all flex items-center gap-2">
                <i class="fa-solid fa-arrow-left"></i>
                Liste
            </a>
            <a href="{{ path('app_fiche_edit', {'id': fiche.id}) }}" class="bg-emerald-600 text-white px-6 py-3 rounded-2xl font-bold hover:bg-emerald-700 shadow-xl shadow-emerald-100 transition-all flex items-center gap-2">
                <i class="fa-solid fa-edit"></i>
                Modifier
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Vitaux Card -->
        <div class="lg:col-span-1 space-y-8">
            <div class="bg-white rounded-[3rem] shadow-xl shadow-slate-200/50 p-10 border border-slate-100 relative overflow-hidden">
                <div class="absolute top-0 right-0 w-32 h-32 bg-red-50 rounded-full blur-3xl -mr-16 -mt-16"></div>
                <h2 class="text-2xl font-black text-slate-800 mb-8 flex items-center gap-3 relative z-10">
                    <i class="fa-solid fa-heart-pulse text-red-500"></i>
                    Vitaux
                </h2>
                
                <div class="space-y-6 relative z-10">
                    <div class="flex items-center justify-between p-4 bg-slate-50 rounded-2xl border border-slate-100 hover:scale-[1.02] transition-transform">
                        <span class="text-slate-400 font-black text-xs uppercase">Poids</span>
                        <span class="text-xl font-black text-slate-700">{{ fiche.poids }} <small class="text-xs text-slate-400 opacity-50">kg</small></span>
                    </div>
                    <div class="flex items-center justify-between p-4 bg-slate-50 rounded-2xl border border-slate-100 hover:scale-[1.02] transition-transform">
                        <span class="text-slate-400 font-black text-xs uppercase">Taille</span>
                        <span class="text-xl font-black text-slate-700">{{ fiche.taille }} <small class="text-xs text-slate-400 opacity-50">cm</small></span>
                    </div>
                    <div class="flex items-center justify-between p-4 bg-red-50/50 rounded-2xl border border-red-100 hover:scale-[1.02] transition-transform">
                        <span class="text-red-400 font-black text-xs uppercase">Groupe Sanguin</span>
                        <span class="text-2xl font-black text-red-600">{{ fiche.grpSanguin }}</span>
                    </div>
                    <div class="flex items-center justify-between p-4 bg-slate-50 rounded-2xl border border-slate-100 hover:scale-[1.02] transition-transform">
                        <span class="text-slate-400 font-black text-xs uppercase">Tension</span>
                        <span class="text-xl font-black text-slate-700">{{ fiche.tension }}</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Diagnostic & Recommendation -->
        <div class="lg:col-span-2 space-y-8">
            <div class="bg-white rounded-[3rem] shadow-xl shadow-slate-200/50 p-10 border border-slate-100">
                <div class="flex items-center justify-between mb-8">
                    <h2 class="text-2xl font-black text-slate-800 flex items-center gap-3">
                        <i class="fa-solid fa-stethoscope text-emerald-500"></i>
                        Diagnostic Principal
                    </h2>
                    <span class="px-5 py-2 rounded-2xl text-xs font-black uppercase tracking-widest
                        {% if fiche.gravite == 'Élevée' %}bg-red-100 text-red-600
                        {% elseif fiche.gravite == 'Moyenne' %}bg-amber-100 text-amber-600
                        {% else %}bg-emerald-100 text-emerald-600{% endif %}">
                        {{ fiche.gravite }}
                    </span>
                </div>
                
                <h3 class="text-3xl font-black text-slate-700 mb-6 italic">"{{ fiche.libelleMaladie }}"</h3>
                
                <div class="pt-8 border-t border-slate-50">
                    <h4 class="text-xs font-black text-slate-400 uppercase tracking-[0.2em] mb-4">Recommandations Cliniques</h4>
                    <div class="bg-emerald-50/50 p-8 rounded-[2rem] border border-emerald-100 text-slate-600 font-bold leading-relaxed italic">
                        {{ fiche.recommandation|default('Aucune recommandation spécifique pour ce diagnostic.')|nl2br }}
                    </div>
                </div>
            </div>

            <!-- Patient Quick Info -->
            <div class="bg-slate-900 rounded-[3rem] p-10 text-white shadow-2xl relative overflow-hidden group">
                <i class="fa-solid fa-fingerprint absolute -right-6 -bottom-6 text-9xl text-white/5 group-hover:scale-125 transition-transform duration-700"></i>
                <div class="flex items-center gap-6 relative z-10">
                    <div class="w-20 h-20 bg-emerald-500 rounded-3xl flex items-center justify-center text-4xl shadow-2xl shadow-emerald-500/20">
                        <i class="fa-solid fa-user-shield"></i>
                    </div>
                    <div>
                        <p class="text-emerald-400 text-xs font-black uppercase tracking-widest mb-1">Dossier Patient</p>
                        <h4 class="text-2xl font-black">{{ fiche.idU.email }}</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
