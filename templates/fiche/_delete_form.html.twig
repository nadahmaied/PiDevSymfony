<form method="post" action="{{ path('app_fiche_delete', {'id': fiche.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette fiche médicale ?');" class="inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ fiche.id) }}">
    <button class="text-red-600 hover:text-red-900 bg-red-50 px-3 py-1 rounded-lg transition">
        <i class="fa-solid fa-trash-can"></i>
    </button>
</form>
