{% extends 'admin_base.html.twig' %}

{% block title %}Suivi des Fiches Médicales{% endblock %}

{% block body %}
<div class="px-4 py-6">
    <!-- Header Section -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-10">
        <div>
            <h1 class="text-4xl font-black text-slate-800 tracking-tight">Fiches Médicales</h1>
            <p class="text-slate-500 font-medium">Historique et analyses cliniques des patients.</p>
        </div>
        <a href="{{ path('app_fiche_new') }}" class="group relative inline-flex items-center justify-center px-8 py-3.5 font-bold text-white transition-all duration-200 bg-emerald-600 font-pj rounded-2xl focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 hover:bg-emerald-700 shadow-xl shadow-emerald-200">
            <i class="fa-solid fa-notes-medical mr-2 group-hover:rotate-12 transition-transform duration-300"></i>
            Nouvelle Fiche
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-10">
        <div class="bg-white p-6 rounded-3xl border border-slate-100 shadow-xl shadow-slate-200/50 flex flex-col gap-2 hover:translate-y-[-4px] transition-transform duration-300">
            <div class="w-10 h-10 bg-blue-50 rounded-xl flex items-center justify-center text-blue-500">
                <i class="fa-solid fa-file-medical"></i>
            </div>
            <p class="text-slate-400 text-xs font-bold uppercase tracking-wider">Total Fiches</p>
            <h3 class="text-2xl font-black text-slate-700">{{ fiches|length }}</h3>
        </div>
        <div class="bg-white p-6 rounded-3xl border border-slate-100 shadow-xl shadow-slate-200/50 flex flex-col gap-2 hover:translate-y-[-4px] transition-transform duration-300">
            <div class="w-10 h-10 bg-red-50 rounded-xl flex items-center justify-center text-red-500">
                <i class="fa-solid fa-triangle-exclamation"></i>
            </div>
            <p class="text-slate-400 text-xs font-bold uppercase tracking-wider">Gravité Élevée</p>
            <h3 class="text-2xl font-black text-slate-700">Analysant...</h3>
        </div>
        <div class="bg-white p-6 rounded-3xl border border-slate-100 shadow-xl shadow-slate-200/50 flex flex-col gap-2 hover:translate-y-[-4px] transition-transform duration-300">
            <div class="w-10 h-10 bg-emerald-50 rounded-xl flex items-center justify-center text-emerald-500">
                <i class="fa-solid fa-user-check"></i>
            </div>
            <p class="text-slate-400 text-xs font-bold uppercase tracking-wider">Patients Suivis</p>
            <h3 class="text-2xl font-black text-slate-700">Multiples</h3>
        </div>
        <div class="bg-white p-6 rounded-3xl border border-slate-100 shadow-xl shadow-slate-200/50 flex flex-col gap-2 hover:translate-y-[-4px] transition-transform duration-300">
            <div class="w-10 h-10 bg-purple-50 rounded-xl flex items-center justify-center text-purple-500">
                <i class="fa-solid fa-calendar-day"></i>
            </div>
            <p class="text-slate-400 text-xs font-bold uppercase tracking-wider">Aujourd'hui</p>
            <h3 class="text-2xl font-black text-slate-700">{{ "now"|date("d M") }}</h3>
        </div>
    </div>

    <!-- Filters & Search -->
    <div class="bg-white/80 backdrop-blur-md p-6 rounded-[2.5rem] border border-white shadow-2xl shadow-slate-200/60 mb-8">
        <form method="get" id="search-form" class="flex flex-col lg:flex-row items-center gap-6">
            <div class="relative w-full lg:flex-1 group">
                <i class="fa-solid fa-magnifying-glass absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 group-focus-within:text-emerald-500 transition-colors"></i>
                <input type="text" name="search" value="{{ search }}" 
                    class="w-full pl-12 pr-4 py-4 bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-emerald-500/20 focus:bg-white transition-all duration-300 font-medium placeholder:text-slate-400"
                    placeholder="Rechercher une maladie, un patient, une gravité..." id="search-input">
            </div>
            
            <div class="flex items-center gap-4 w-full lg:w-auto">
                <div class="relative flex-1 lg:w-56">
                    <select name="sortBy" onchange="this.form.submit()" 
                        class="w-full pl-4 pr-10 py-4 bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-emerald-500/20 appearance-none font-bold text-slate-700">
                        <option value="libelleMaladie" {% if sortBy == 'libelleMaladie' %}selected{% endif %}>Par Maladie</option>
                        <option value="date" {% if sortBy == 'date' %}selected{% endif %}>Par Date</option>
                        <option value="gravite" {% if sortBy == 'gravite' %}selected{% endif %}>Par Gravité</option>
                    </select>
                    <i class="fa-solid fa-chevron-down absolute right-4 top-1/2 -translate-y-1/2 text-slate-400 pointer-events-none"></i>
                </div>

                <div class="relative flex-1 lg:w-40">
                    <select name="sortOrder" onchange="this.form.submit()"
                        class="w-full pl-4 pr-10 py-4 bg-slate-50 border-none rounded-2xl focus:ring-2 focus:ring-emerald-500/20 appearance-none font-bold text-slate-700">
                        <option value="ASC" {% if sortOrder == 'ASC' %}selected{% endif %}>Croissant</option>
                        <option value="DESC" {% if sortOrder == 'DESC' %}selected{% endif %}>Décroissant</option>
                    </select>
                    <i class="fa-solid fa-sort absolute right-4 top-1/2 -translate-y-1/2 text-slate-400 pointer-events-none"></i>
                </div>
            </div>
        </form>
    </div>

    <!-- Table Section -->
    <div class="bg-white rounded-[2.5rem] overflow-hidden border border-slate-100 shadow-2xl shadow-slate-200/50">
        <div class="overflow-x-auto text-nowrap">
            <table class="w-full text-left border-separate border-spacing-0">
                <thead>
                    <tr class="bg-slate-50/50">
                        <th class="px-8 py-5 text-xs font-black text-slate-400 uppercase tracking-widest border-b border-slate-100">Patient & Date</th>
                        <th class="px-8 py-5 text-xs font-black text-slate-400 uppercase tracking-widest border-b border-slate-100">Diagnostic</th>
                        <th class="px-8 py-5 text-xs font-black text-slate-400 uppercase tracking-widest border-b border-slate-100">Signes Vitaux</th>
                        <th class="px-8 py-5 text-xs font-black text-slate-400 uppercase tracking-widest border-b border-slate-100 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody id="table-body">
                    {% for fiche in fiches %}
                        <tr class="group hover:bg-emerald-50/30 transition-all duration-300">
                            <td class="px-8 py-6 border-b border-slate-50">
                                <div class="flex items-center gap-4">
                                    <div class="w-12 h-12 bg-white border border-slate-100 rounded-full flex items-center justify-center shadow-sm group-hover:border-emerald-200 group-hover:shadow-emerald-100 transition-all">
                                        <i class="fa-solid fa-user-doctor text-slate-400 group-hover:text-emerald-500"></i>
                                    </div>
                                    <div>
                                        <div class="font-black text-slate-700">{{ fiche.idU.email }}</div>
                                        <div class="text-xs font-black text-emerald-500 uppercase">{{ fiche.date ? fiche.date|date('d F Y') : 'N/A' }}</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-8 py-6 border-b border-slate-50">
                                <div class="flex flex-col gap-1">
                                    <div class="font-bold text-slate-700">{{ fiche.libelleMaladie }}</div>
                                    <div>
                                        <span class="px-3 py-1 rounded-lg text-[10px] font-black uppercase
                                            {% if fiche.gravite == 'Élevée' %}bg-red-100 text-red-600
                                            {% elseif fiche.gravite == 'Moyenne' %}bg-amber-100 text-amber-600
                                            {% else %}bg-emerald-100 text-emerald-600{% endif %}">
                                            {{ fiche.gravite }}
                                        </span>
                                    </div>
                                </div>
                            </td>
                            <td class="px-8 py-6 border-b border-slate-50">
                                <div class="grid grid-cols-2 gap-x-6 gap-y-1 text-xs">
                                    <div class="flex items-center gap-2">
                                        <span class="text-slate-400 font-bold">Poids:</span>
                                        <span class="text-slate-700 font-black">{{ fiche.poids }}kg</span>
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <span class="text-slate-400 font-bold">Tension:</span>
                                        <span class="text-slate-700 font-black">{{ fiche.tension }}</span>
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <span class="text-slate-400 font-bold">Glycémie:</span>
                                        <span class="text-slate-700 font-black">{{ fiche.glycemie }}g/L</span>
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <span class="text-slate-400 font-bold">Groupe:</span>
                                        <span class="text-red-500 font-black">{{ fiche.grpSanguin }}</span>
                                    </div>
                                </div>
                            </td>
                            <td class="px-8 py-6 border-b border-slate-50 text-right">
                                <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-all duration-300 translate-x-4 group-hover:translate-x-0">
                                    <a href="{{ path('app_fiche_show', {'id': fiche.id}) }}" 
                                        class="w-10 h-10 rounded-xl bg-blue-50 text-blue-600 flex items-center justify-center hover:bg-blue-600 hover:text-white transition-all shadow-lg shadow-blue-100">
                                        <i class="fa-solid fa-eye text-sm"></i>
                                    </a>
                                    <a href="{{ path('app_fiche_edit', {'id': fiche.id}) }}" 
                                        class="w-10 h-10 rounded-xl bg-amber-50 text-amber-600 flex items-center justify-center hover:bg-amber-600 hover:text-white transition-all shadow-lg shadow-amber-100">
                                        <i class="fa-solid fa-pen-to-square text-sm"></i>
                                    </a>
                                    <div class="inline-block">
                                        {{ include('fiche/_delete_form.html.twig') }}
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="px-8 py-20 text-center">
                                <div class="flex flex-col items-center">
                                    <div class="w-20 h-20 bg-slate-50 rounded-full flex items-center justify-center mb-4">
                                        <i class="fa-solid fa-file-circle-xmark text-3xl text-slate-200"></i>
                                    </div>
                                    <p class="text-slate-400 font-bold">Aucune fiche trouvée</p>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('search-input');
    const searchForm = document.getElementById('search-form');
    let timeout = null;

    searchInput.addEventListener('input', function() {
        clearTimeout(timeout);
        timeout = setTimeout(() => {
            searchForm.submit();
        }, 500);
    });
});
</script>

<style>
    .overflow-x-auto::-webkit-scrollbar { height: 6px; }
    .overflow-x-auto::-webkit-scrollbar-track { background: transparent; }
    .overflow-x-auto::-webkit-scrollbar-thumb { background: #e2e8f0; border-radius: 10px; }
    
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    #table-body tr { animation: fadeIn 0.4s ease-out forwards; }
    {% for i in range(1, 20) %}
    #table-body tr:nth-child({{ i }}) { animation-delay: {{ i * 0.05 }}s; }
    {% endfor %}
</style>
{% endblock %}
