{% extends 'baseBack.html.twig' %}

{% block title %}Modifier Sujet{% endblock %}

{% block body %}
<div class="p-8 max-w-3xl mx-auto">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Modifier le sujet</h1>

    <div class="bg-white rounded-xl shadow-md p-6 border border-gray-200">
        <div class="bg-yellow-50 text-yellow-800 p-4 rounded-lg mb-6 text-sm">
            <i class="fa-solid fa-triangle-exclamation mr-2"></i> 
            Attention, modifier le message original peut dénaturer les réponses des utilisateurs.
        </div>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            
            <div class="mb-4">
                {{ form_label(form.titre, null, {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                {{ form_widget(form.titre) }}
            </div>

            <div class="mb-6">
                {{ form_label(form.contenu, null, {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                {{ form_widget(form.contenu) }}
            </div>

            <div class="flex justify-end gap-3">
                <a href="{{ path('app_admin_forum_index') }}" class="px-4 py-2 text-gray-600 hover:bg-gray-100 rounded-lg transition">Annuler</a>
                <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg font-bold hover:bg-blue-700 transition">
                    <i class="fa-solid fa-check mr-2"></i> Enregistrer
                </button>
            </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}