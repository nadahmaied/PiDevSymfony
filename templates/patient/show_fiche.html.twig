{% extends 'baseFront.html.twig' %}

{% block title %}
<h1 class="text-2xl font-black text-gray-800 tracking-tight">Analyse Clinique #{{ fiche.id }} üìã</h1>
{% endblock %}

{% block body %}
<div class="px-8 py-8 space-y-10">
    <!-- Back Header -->
    <div class="flex items-center justify-between">
        <a href="{{ path('patient_dossier') }}" class="flex items-center gap-2 text-gray-400 hover:text-blue-600 transition-all font-black group">
            <i class="fa-solid fa-arrow-left group-hover:-translate-x-1 transition-transform"></i>
            Retour au dossier
        </a>
        <div class="flex items-center gap-4">
            <span class="px-5 py-2 rounded-2xl bg-emerald-100 text-emerald-700 text-xs font-black uppercase tracking-widest border border-emerald-200">
                Diagnostic Valid√©
            </span>
        </div>
    </div>

    <!-- Main Card -->
    <div class="bg-white rounded-[3rem] shadow-2xl shadow-gray-200/50 border border-gray-100 p-0 overflow-hidden group">
        <div class="grid grid-cols-1 lg:grid-cols-3">
            <!-- Left Info Panel -->
            <div class="p-12 bg-slate-50 border-r border-gray-100 space-y-10">
                <div>
                    <h3 class="text-xs font-black text-slate-400 uppercase tracking-widest mb-6">Signes Vitaux</h3>
                    <div class="space-y-6">
                        <div class="flex items-center justify-between p-5 bg-white rounded-2xl shadow-sm border border-slate-100 hover:scale-[1.05] transition-transform">
                            <i class="fa-solid fa-weight-scale text-blue-500"></i>
                            <span class="text-sm font-bold text-slate-500">Poids</span>
                            <span class="text-lg font-black text-slate-700">{{ fiche.poids }} <small class="text-[10px] opacity-30">kg</small></span>
                        </div>
                        <div class="flex items-center justify-between p-5 bg-white rounded-2xl shadow-sm border border-slate-100 hover:scale-[1.05] transition-transform">
                            <i class="fa-solid fa-arrows-up-down text-blue-500"></i>
                            <span class="text-sm font-bold text-slate-500">Taille</span>
                            <span class="text-lg font-black text-slate-700">{{ fiche.taille }} <small class="text-[10px] opacity-30">cm</small></span>
                        </div>
                        <div class="flex items-center justify-between p-5 bg-red-50/50 rounded-2xl shadow-sm border border-red-100 hover:scale-[1.05] transition-transform">
                            <i class="fa-solid fa-droplet text-red-500"></i>
                            <span class="text-sm font-bold text-red-500/70">Groupe</span>
                            <span class="text-xl font-black text-red-600">{{ fiche.grpSanguin }}</span>
                        </div>
                        <div class="flex items-center justify-between p-5 bg-white rounded-2xl shadow-sm border border-slate-100 hover:scale-[1.05] transition-transform">
                            <i class="fa-solid fa-heart-pulse text-blue-500"></i>
                            <span class="text-sm font-bold text-slate-500">Tension</span>
                            <span class="text-lg font-black text-slate-700">{{ fiche.tension }}</span>
                        </div>
                    </div>
                </div>

                <div class="pt-10 border-t border-slate-200">
                    <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2 italic">Observation du m√©decin</p>
                    <p class="text-sm font-bold text-slate-700 leading-relaxed italic">
                        "Enregistrement effectu√© le {{ fiche.date ? fiche.date|date('d/m/Y') : 'N/A' }}. Les param√®tres vitaux sont stables."
                    </p>
                </div>
            </div>

            <!-- Right Content Panel -->
            <div class="lg:col-span-2 p-12 space-y-12 bg-white relative">
                <div class="absolute top-0 right-0 w-64 h-64 bg-emerald-50 rounded-full blur-3xl -mr-32 -mt-32 opacity-50"></div>
                
                <div class="relative z-10">
                    <h2 class="text-xs font-black text-emerald-400 uppercase tracking-[0.2em] mb-4">Diagnostic √âtabli</h2>
                    <h3 class="text-4xl font-black text-gray-800 italic leading-tight mb-6">"{{ fiche.libelleMaladie }}"</h3>
                    <div class="inline-flex items-center gap-2 px-4 py-2 bg-emerald-50 rounded-xl text-emerald-600 font-black text-xs uppercase">
                        <i class="fa-solid fa-triangle-exclamation"></i>
                        Niveau de Gravit√© : {{ fiche.gravite }}
                    </div>
                </div>

                <div class="space-y-6 relative z-10">
                    <h4 class="text-xs font-black text-slate-400 uppercase tracking-[0.2em]">Recommandations Th√©rapeutiques</h4>
                    <div class="p-8 bg-slate-50 rounded-[2.5rem] border border-slate-100 text-lg font-bold text-slate-600 leading-loose italic">
                        <i class="fa-solid fa-quote-left text-blue-200 text-4xl mb-4 block"></i>
                        {{ fiche.recommandation|default('Aucune recommandation sp√©cifique fournie par le praticien.')|nl2br }}
                    </div>
                </div>

                <div class="flex items-center gap-6 pt-12 border-t border-gray-50 opacity-50 relative z-10">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center text-gray-400">
                            <i class="fa-solid fa-calendar-check"></i>
                        </div>
                        <span class="text-xs font-bold text-gray-400">Enregistr√© le {{ fiche.date ? fiche.date|date('d F Y') : 'N/A' }}</span>
                    </div>
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center text-gray-400">
                            <i class="fa-solid fa-fingerprint"></i>
                        </div>
                        <span class="text-xs font-bold text-gray-400">ID Dossier: #{{ fiche.id }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
