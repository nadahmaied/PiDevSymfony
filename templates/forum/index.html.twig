{% extends 'baseFront.html.twig' %}

{% block title %}Forum Sant√© - HealthTrack{% endblock %}

{% block body %}
<div class="flex h-screen overflow-hidden bg-slate-50">
    
    <aside class="w-64 bg-white border-r border-slate-200 hidden md:flex flex-col z-20">
        {% include 'partials/_sidebar_front.html.twig' ignore missing %}
    </aside>

    <main class="flex-1 flex flex-col h-screen overflow-hidden relative">
        
        <header class="bg-white/80 backdrop-blur-md border-b border-slate-200 py-4 px-8 flex justify-between items-center shrink-0 z-10 sticky top-0">
            <h1 class="text-2xl font-bold text-slate-800">Espace d'√©change</h1>
            
            <div class="flex items-center gap-4">
                <div class="hidden sm:block text-right">
                     <p class="text-sm font-bold text-slate-700">{{ app.user ? app.user.email : 'Invit√©' }}</p>
                </div>
                <img src="https://ui-avatars.com/api/?name={{ app.user ? app.user.email : 'Guest' }}&background=0D8ABC&color=fff" class="w-10 h-10 rounded-full object-cover shadow-sm">
            </div>
        </header>

        <div class="flex-1 overflow-y-auto bg-slate-50 p-4 md:p-8 no-scrollbar">
            <div class="max-w-7xl mx-auto space-y-8">

                <div class="bg-gradient-to-r from-teal-500 to-emerald-600 rounded-3xl p-8 md:p-10 text-white shadow-xl shadow-teal-900/10 relative overflow-hidden">
                    <div class="relative z-10 max-w-3xl">
                        <h2 class="text-3xl md:text-4xl font-bold mb-3">Une question sur votre sant√© ?</h2>
                        <p class="text-teal-100 mb-8 text-lg font-light">√âchangez avec des m√©decins et des patients. Obtenez des r√©ponses fiables.</p>
                        
                        <div class="flex flex-col sm:flex-row gap-4">
                            <form class="relative flex-1" method="get" action="{{ path('app_forum_index') }}">
                                <input type="hidden" name="filter" value="{{ currentFilter }}">
                                
                                <i class="fa-solid fa-search absolute left-4 top-3.5 text-slate-400"></i>
                                <input type="text" name="q" value="{{ searchTerm }}" placeholder="Rechercher des sujets..." class="w-full pl-12 pr-4 py-3.5 rounded-xl text-slate-800 placeholder-slate-400 focus:outline-none focus:ring-4 focus:ring-teal-300/50 shadow-lg">
                            </form>
                            
                            <a href="{{ path('app_forum_new') }}" class="bg-slate-900 text-white px-6 py-3.5 rounded-xl font-bold shadow-lg hover:bg-slate-800 transition flex items-center justify-center gap-2 whitespace-nowrap">
                                <i class="fa-solid fa-plus"></i> Nouveau Sujet
                            </a>
                        </div>
                    </div>
                    <i class="fa-solid fa-comments absolute -bottom-10 -right-10 text-9xl text-white opacity-10 transform -rotate-12"></i>
                    <div class="absolute top-0 right-0 w-64 h-64 bg-white opacity-5 rounded-full blur-3xl transform translate-x-1/2 -translate-y-1/2"></div>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
                    
                    <div class="lg:col-span-8 space-y-6">
                        
                        <div class="flex items-center justify-between pb-2 border-b border-slate-200">
                            <div class="flex gap-4 text-sm md:text-base">
                                <a href="{{ path('app_forum_index', {'filter': 'recent', 'q': searchTerm}) }}" 
                                   class="{{ currentFilter == 'recent' ? 'text-slate-800 font-bold border-b-2 border-teal-500' : 'text-slate-500 font-medium hover:text-teal-600' }} pb-2 transition">
                                   R√©cents
                                </a>

                                <a href="{{ path('app_forum_index', {'filter': 'popular', 'q': searchTerm}) }}" 
                                   class="{{ currentFilter == 'popular' ? 'text-slate-800 font-bold border-b-2 border-teal-500' : 'text-slate-500 font-medium hover:text-teal-600' }} pb-2 transition">
                                   Populaires üî•
                                </a>

                                <a href="{{ path('app_forum_index', {'filter': 'unanswered', 'q': searchTerm}) }}" 
                                   class="{{ currentFilter == 'unanswered' ? 'text-slate-800 font-bold border-b-2 border-teal-500' : 'text-slate-500 font-medium hover:text-teal-600' }} pb-2 transition">
                                   Sans r√©ponse
                                </a>
                            </div>
                            <div class="hidden sm:block text-slate-500 text-sm font-medium">
                                ({{ pagination.getTotalItemCount }} r√©sultats)
                            </div>
                        </div>

                        {% for question in pagination %}
                            <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 hover:shadow-md hover:border-teal-200 transition group cursor-pointer relative">
                                <a href="{{ path('app_forum_show', {'id': question.id}) }}" class="absolute inset-0 z-0"></a>

                                <div class="flex items-start gap-4 relative z-10 pointer-events-none">
                                    <img src="https://ui-avatars.com/api/?name={{ question.auteur ? question.auteur.email : 'Anonyme' }}&background=random" class="w-12 h-12 rounded-xl">
                                    
                                    <div class="flex-1">
                                        <div class="flex items-center gap-2 mb-1">
                                            <span class="bg-blue-50 text-blue-600 text-xs font-bold px-2.5 py-0.5 rounded-full border border-blue-100">Sant√©</span>
                                            <span class="text-slate-400 text-xs">‚Ä¢ {{ question.dateCreation|date('d/m/Y H:i') }}</span>
                                        </div>
                                        
                                        <h3 class="text-lg font-bold text-slate-800 mb-2 group-hover:text-teal-600 transition">
                                            {{ question.titre }}
                                        </h3>
                                        <p class="text-slate-500 text-sm line-clamp-2 mb-4">
                                            {{ question.contenu }}
                                        </p>
                                        
                                        <div class="flex items-center justify-between">
                                            <div class="flex items-center gap-4 text-slate-400 text-sm">
                                                <span class="flex items-center gap-1 group-hover:text-blue-500 transition">
                                                    <i class="fa-regular fa-comment-dots"></i> {{ question.reponses|length }} r√©ponses
                                                </span>
                                                <span class="flex items-center gap-1 group-hover:text-red-500 transition">
                                                    <i class="fa-regular fa-heart"></i> 0
                                                </span>
                                            </div>
                                            
                                            {% if question.reponses|length > 0 %}
                                                <div class="flex -space-x-2">
                                                    {% for reponse in question.reponses|slice(0, 3) %}
                                                        <img class="w-6 h-6 rounded-full border-2 border-white" 
                                                             src="https://ui-avatars.com/api/?name={{ reponse.auteur ? reponse.auteur.email : '?' }}&background=random" 
                                                             title="R√©ponse de {{ reponse.auteur ? reponse.auteur.email : '?' }}">
                                                    {% endfor %}
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="text-center py-10 bg-white rounded-2xl border border-dashed border-slate-300">
                                <p class="text-slate-500 text-lg">Aucune question trouv√©e...</p>
                                <p class="text-slate-400 text-sm">Soyez le premier √† poser une question !</p>
                            </div>
                        {% endfor %}

                        <div class="flex justify-center mt-8">
                            {{ knp_pagination_render(pagination) }}
                        </div>

                    </div>

                    <div class="lg:col-span-4 space-y-6">
                        <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6">
                            <h4 class="font-bold text-slate-800 mb-4 flex items-center gap-2">
                                <i class="fa-solid fa-layer-group text-teal-500"></i> Cat√©gories
                            </h4>
                            <ul class="space-y-3">
                                <li>
                                    <a href="#" class="flex items-center justify-between group">
                                        <span class="text-slate-600 group-hover:text-teal-600 transition flex items-center gap-2">
                                            <span class="w-2 h-2 rounded-full bg-blue-500"></span> M√©decine G√©n√©rale
                                        </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="flex items-center justify-between group">
                                        <span class="text-slate-600 group-hover:text-teal-600 transition flex items-center gap-2">
                                            <span class="w-2 h-2 rounded-full bg-pink-500"></span> Nutrition
                                        </span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </main>
</div>

{# CSS Pour la pagination si elle ne s'affiche pas bien #}
<style>
    .pagination { display: flex; gap: 0.5rem; justify-content: center; }
    .pagination span, .pagination a {
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        background: white;
        border: 1px solid #e2e8f0;
        color: #475569;
        text-decoration: none;
        transition: all 0.2s;
    }
    .pagination a:hover { background: #f1f5f9; color: #0d9488; }
    .pagination .current {
        background: #0d9488;
        color: white;
        border-color: #0d9488;
        font-weight: bold;
    }
</style>
{% endblock %}