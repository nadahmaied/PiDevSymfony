{% extends 'baseFront.html.twig' %}

{% block title %}Nouveau Sujet{% endblock %}

{% block body %}
<div class="flex h-screen bg-slate-50 overflow-hidden">
    <aside class="w-64 bg-white border-r border-slate-200 hidden md:flex flex-col z-20">
        {% include 'partials/_sidebar_front.html.twig' ignore missing %}
    </aside>

    <main class="flex-1 flex flex-col h-screen overflow-y-auto p-8 relative">
        <div class="max-w-3xl mx-auto w-full">
            
            <a href="{{ path('app_forum_index') }}" class="text-slate-500 hover:text-teal-600 mb-6 inline-flex items-center gap-2 transition">
                <i class="fa-solid fa-arrow-left"></i> Retour au forum
            </a>

            <div class="bg-white rounded-3xl shadow-xl p-8 border border-slate-100 relative overflow-hidden">
                <div class="absolute top-0 right-0 w-32 h-32 bg-teal-50 rounded-bl-full -mr-10 -mt-10 z-0"></div>
                
                <h1 class="text-3xl font-bold text-slate-800 mb-2 relative z-10">Poser une question</h1>
                <p class="text-slate-500 mb-8 relative z-10">La communauté et nos médecins sont là pour vous aider.</p>

                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="space-y-6 relative z-10">
                        <div>
                            {{ form_label(form.titre, 'Titre de votre sujet', {'label_attr': {'class': 'block text-sm font-bold text-slate-700 mb-2'}}) }}
                            {{ form_widget(form.titre, {'attr': {'class': 'w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-teal-500 focus:ring-4 focus:ring-teal-500/10 transition outline-none', 'placeholder': 'Ex: Douleurs musculaires après le sport'}}) }}
                            {{ form_errors(form.titre) }}
                        </div>

                        <div>
                            {{ form_label(form.contenu, 'Détails de votre question', {'label_attr': {'class': 'block text-sm font-bold text-slate-700 mb-2'}}) }}
                            {{ form_widget(form.contenu, {'attr': {'class': 'w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-teal-500 focus:ring-4 focus:ring-teal-500/10 transition outline-none h-48 resize-none', 'placeholder': 'Soyez précis pour obtenir une meilleure réponse...'}}) }}
                            {{ form_errors(form.contenu) }}
                        </div>

                        <button type="submit" class="w-full bg-teal-600 text-white font-bold py-4 rounded-xl hover:bg-teal-700 transition shadow-lg shadow-teal-600/20 flex items-center justify-center gap-2">
                            <i class="fa-solid fa-paper-plane"></i> Publier ma question
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </main>
</div>
{% endblock %}