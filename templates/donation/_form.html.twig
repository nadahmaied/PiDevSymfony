{{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}
    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 space-y-5">
        <h2 class="text-xl font-bold text-slate-800 flex items-center gap-2">
            <i class="fa-solid fa-hand-holding-heart text-emerald-500"></i>
            {{ button_label is defined and button_label == 'Mettre à jour' ? 'Modifier une donation' : 'Proposer une nouvelle donation' }}
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <div class="space-y-1.5">
                {{ form_label(form.typeDon, 'Type de don', {'label_attr': {'class': 'block text-sm font-medium text-slate-700'}}) }}
                {{ form_widget(form.typeDon, {'attr': {'class': 'mt-1 block w-full rounded-xl border border-slate-200 bg-slate-50/60 px-3 py-2.5 text-sm text-slate-800 shadow-sm focus:border-emerald-500 focus:ring-2 focus:ring-emerald-200 outline-none'}}) }}
                {{ form_errors(form.typeDon) }}
            </div>

            <div class="space-y-1.5">
                {{ form_label(form.quantite, 'Quantité', {'label_attr': {'class': 'block text-sm font-medium text-slate-700'}}) }}
                {{ form_widget(form.quantite, {'attr': {'class': 'mt-1 block w-full rounded-xl border border-slate-200 bg-slate-50/60 px-3 py-2.5 text-sm text-slate-800 shadow-sm focus:border-emerald-500 focus:ring-2 focus:ring-emerald-200 outline-none'}}) }}
                {{ form_errors(form.quantite) }}
            </div>

            <div class="space-y-1.5">
                {{ form_label(form.dateDonation, 'Date du don', {'label_attr': {'class': 'block text-sm font-medium text-slate-700'}}) }}
                {{ form_widget(form.dateDonation, {'attr': {'class': 'mt-1 block w-full rounded-xl border border-slate-200 bg-slate-50/60 px-3 py-2.5 text-sm text-slate-800 shadow-sm focus:border-emerald-500 focus:ring-2 focus:ring-emerald-200 outline-none'}}) }}
                {{ form_errors(form.dateDonation) }}
            </div>

            <div class="space-y-1.5">
                {{ form_label(form.statut, 'Statut', {'label_attr': {'class': 'block text-sm font-medium text-slate-700'}}) }}
                {{ form_widget(form.statut, {'attr': {'class': 'mt-1 block w-full rounded-xl border border-slate-200 bg-slate-50/60 px-3 py-2.5 text-sm text-slate-800 shadow-sm focus:border-emerald-500 focus:ring-2 focus:ring-emerald-200 outline-none'}}) }}
                {{ form_errors(form.statut) }}
            </div>

            <div class="md:col-span-2 space-y-1.5">
                {{ form_label(form.annonce, 'Annonce associée', {'label_attr': {'class': 'block text-sm font-medium text-slate-700'}}) }}
                {{ form_widget(form.annonce, {'attr': {'class': 'mt-1 block w-full rounded-xl border border-slate-200 bg-slate-50/60 px-3 py-2.5 text-sm text-slate-800 shadow-sm focus:border-emerald-500 focus:ring-2 focus:ring-emerald-200 outline-none'}}) }}
                <p class="text-xs text-slate-400 mt-1">Sélectionnez l'annonce à laquelle ce don est rattaché.</p>
                {{ form_errors(form.annonce) }}
            </div>
        </div>

        <div class="flex items-center justify-between pt-4 border-t border-slate-100">
            <a href="{{ path('app_donation_index') }}" class="inline-flex items-center gap-2 text-sm font-medium text-slate-500 hover:text-slate-700">
                <i class="fa-solid fa-arrow-left"></i>
                Retour à la liste
            </a>
            <button class="inline-flex items-center gap-2 rounded-xl bg-emerald-600 px-5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-emerald-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-emerald-500 focus-visible:ring-offset-2">
                <i class="fa-solid fa-paper-plane"></i>
                {{ button_label|default('Enregistrer') }}
            </button>
        </div>
    </div>

    {{ form_rest(form) }}
{{ form_end(form) }}
