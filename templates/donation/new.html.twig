{% extends 'base.html.twig' %}

{% block title %}Nouvelle donation - HealthTrack{% endblock %}

{% block page_title %}Proposer un don{% endblock %}

{% block body %}
    <div class="flex flex-col gap-6">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
            <div>
                <h1 class="text-2xl font-bold text-slate-800 flex items-center gap-2">
                    <i class="fa-solid fa-hand-holding-heart text-emerald-500"></i>
                    Nouvelle donation
                </h1>
                <p class="text-sm text-slate-500 mt-1">
                    {% if annonce is defined %}
                        Vous êtes en train de créer un don pour l'annonce :
                        <span class="font-semibold text-slate-800">"{{ annonce.titreAnnonce }}"</span>.
                    {% else %}
                        Indiquez précisément ce que vous souhaitez offrir afin de le faire correspondre aux annonces.
                    {% endif %}
                </p>
            </div>
            <a href="{{ path('app_donation_index') }}" class="inline-flex items-center gap-2 rounded-xl border border-slate-200 bg-white px-4 py-2 text-sm font-medium text-slate-700 shadow-sm hover:bg-slate-50">
                <i class="fa-solid fa-list"></i>
                Voir toutes les donations
            </a>
        </div>

        {{ include('donation/_form.html.twig', { button_label: 'Valider le don' }) }}
    </div>
{% endblock %}
