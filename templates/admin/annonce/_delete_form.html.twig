<form method="post"
      action="{{ path('admin_annonce_delete', {'id': annonce.id}) }}"
      onsubmit="return confirm('Confirmer la suppression de cette annonce ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ annonce.id) }}">
    <button class="inline-flex items-center gap-2 rounded-xl bg-red-600 px-4 py-2 text-xs font-semibold text-white shadow-sm hover:bg-red-700">
        <i class="fa-solid fa-trash"></i>
        Supprimer l'annonce
    </button>
</form>

