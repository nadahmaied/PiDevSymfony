{% extends 'admin_base.html.twig' %}

{% block title %}Admin - Détail donation #{{ donation.id }}{% endblock %}

{% block page_header %}Détail de la donation{% endblock %}
{% block page_subtitle %}Visualisation et gestion de la donation sélectionnée{% endblock %}

{% block header_actions %}
    <div class="flex gap-2">
        <a href="{{ path('admin_donation_index') }}" class="inline-flex items-center gap-2 rounded-xl border border-slate-200 bg-white px-4 py-2 text-sm font-medium text-slate-700 shadow-sm hover:bg-slate-50">
            <i class="fa-solid fa-arrow-left"></i>
            Retour à la liste
        </a>
        <a href="{{ path('admin_donation_edit', {'id': donation.id}) }}" class="inline-flex items-center gap-2 rounded-xl bg-orange-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-orange-700">
            <i class="fa-solid fa-pen"></i>
            Modifier
        </a>
    </div>
{% endblock %}

{% block body %}
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="lg:col-span-2 bg-white rounded-2xl shadow-sm border border-slate-100 p-6 space-y-4">
            <div class="flex items-start justify-between gap-4">
                <div>
                    <h1 class="text-xl font-bold text-slate-900 flex items-center gap-2">
                        <i class="fa-solid fa-hand-holding-heart text-emerald-500"></i>
                        {{ donation.typeDon }}
                    </h1>
                    <p class="text-xs text-slate-400 mt-1">
                        Donation du {{ donation.dateDonation ? donation.dateDonation|date('d M Y') : '—' }}
                    </p>
                </div>
                <span class="text-xs font-bold text-slate-700 bg-slate-100 px-2 py-0.5 rounded">
                    Qté: {{ donation.quantite }}
                </span>
            </div>

            <div class="pt-4 border-t border-slate-100 space-y-3 text-sm">
                {% if donation.annonce %}
                    <div class="flex items-center justify-between">
                        <span class="text-slate-500">Annonce associée</span>
                        <a href="{{ path('admin_annonce_show', {'id': donation.annonce.id}) }}" class="inline-flex items-center gap-1 text-sm text-blue-600 hover:underline">
                            <i class="fa-solid fa-link"></i>
                            {{ donation.annonce.titreAnnonce }}
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="space-y-4">
            <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 space-y-4">
                <h2 class="text-sm font-semibold text-slate-700 uppercase tracking-wide">
                    Statut
                </h2>
                <div class="space-y-3 text-sm">
                    <div class="flex items-center justify-between">
                        <span class="text-slate-500">Statut actuel</span>
                        {% if donation.statut == 'en attente' %}
                            <span class="inline-flex items-center gap-1.5 text-xs font-medium text-yellow-700 bg-yellow-100 px-2.5 py-1 rounded-full">
                                <i class="fa-solid fa-spinner"></i> En attente
                            </span>
                        {% elseif donation.statut == 'accepté' %}
                            <span class="inline-flex items-center gap-1.5 text-xs font-medium text-emerald-700 bg-emerald-100 px-2.5 py-1 rounded-full">
                                <i class="fa-solid fa-check"></i> Accepté
                            </span>
                        {% else %}
                            <span class="inline-flex items-center gap-1.5 text-xs font-medium text-slate-700 bg-slate-200 px-2.5 py-1 rounded-full">
                                <i class="fa-solid fa-xmark"></i> Refusé
                            </span>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-2xl shadow-sm border border-red-100 p-6 space-y-3">
                <h2 class="text-sm font-semibold text-red-700 uppercase tracking-wide flex items-center gap-2">
                    <i class="fa-solid fa-triangle-exclamation"></i>
                    Suppression
                </h2>
                <p class="text-xs text-slate-500">Cette action est irréversible. La donation sera définitivement supprimée de la plateforme.</p>
                {{ include('admin/donation/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}

