{% extends 'baseFront.html.twig' %}

{% block title %}Modifier ma candidature{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-12">
    <div class="max-w-2xl mx-auto bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100">
        
        <div class="bg-blue-600 p-6 text-white flex justify-between items-center">
            <h1 class="text-2xl font-bold">Modifier ma candidature</h1>
            <a href="{{ path('app_front_volunteer_index') }}" class="text-blue-100 hover:text-white text-sm transition flex items-center gap-2">
                <i class="fa-solid fa-arrow-left"></i> Retour
            </a>
        </div>

        <div class="p-8">
            <div class="mb-8 bg-blue-50 text-blue-800 p-4 rounded-lg border border-blue-100 flex items-start gap-3">
                <i class="fa-solid fa-circle-info mt-1"></i>
                <div>
                    <p class="text-sm">Vous modifiez votre candidature pour la mission :</p>
                    <p class="font-bold text-lg">{{ volunteer.mission.titre }}</p>
                </div>
            </div>

            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                
                {{ form_widget(form) }}

                <div class="pt-4">
                    <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg font-bold hover:bg-blue-700 transition shadow flex justify-center items-center gap-2">
                        <i class="fa-solid fa-save"></i> Enregistrer les modifications
                    </button>
                </div>

            {{ form_end(form) }}

            <div class="mt-12 pt-8 border-t border-gray-200">
                <h3 class="text-red-600 font-bold mb-2 flex items-center gap-2">
                    <i class="fa-solid fa-triangle-exclamation"></i> Zone de danger
                </h3>
                <div class="flex flex-col sm:flex-row justify-between items-center bg-red-50 p-4 rounded-lg border border-red-100 gap-4">
                    <p class="text-gray-600 text-sm">Vous ne souhaitez plus participer à cette mission ?</p>
                    
                    <form method="post" action="{{ path('app_front_volunteer_delete', {'id': volunteer.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir annuler définitivement cette candidature ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ volunteer.id) }}">
                        <button class="text-red-600 bg-white border border-red-200 hover:bg-red-600 hover:text-white px-4 py-2 rounded-lg font-medium transition shadow-sm text-sm whitespace-nowrap">
                            <i class="fa-solid fa-trash"></i> Annuler ma candidature
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}