{% extends 'baseFront.html.twig' %}

{% block title %}Nouvelle Mission{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-12">
    <div class="max-w-3xl mx-auto bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100">
        
        <div class="bg-orange-600 p-6 text-white flex justify-between items-center">
            <h1 class="text-2xl font-bold">Publier une mission</h1>
            <a href="{{ path('app_assoc_mission_index') }}" class="text-white opacity-80 hover:opacity-100 transition text-sm">
                <i class="fa-solid fa-xmark mr-1"></i> Annuler
            </a>
        </div>

        <div class="p-8">
            {{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="col-span-2">
                        {{ form_label(form.titre, null, {'label_attr': {'class': 'block text-sm font-bold text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.titre, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 outline-none'}}) }}
                        {{ form_errors(form.titre) }}
                    </div>

                    <div>
                        {{ form_label(form.lieu, null, {'label_attr': {'class': 'block text-sm font-bold text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.lieu, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg'}}) }}
                        {{ form_errors(form.lieu) }}
                    </div>

                    <div>
                        {{ form_label(form.statut, null, {'label_attr': {'class': 'block text-sm font-bold text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.statut, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg'}}) }}
                    </div>

                    <div>
                        {{ form_label(form.dateDebut, "Date de d√©but", {'label_attr': {'class': 'block text-sm font-bold text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.dateDebut, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg'}}) }}
                        {{ form_errors(form.dateDebut) }}
                    </div>
                    <div>
                        {{ form_label(form.dateFin, "Date de fin", {'label_attr': {'class': 'block text-sm font-bold text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.dateFin, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg'}}) }}
                        {{ form_errors(form.dateFin) }}
                    </div>

                    <div class="col-span-2">
                        {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-bold text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg h-32'}}) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <div class="col-span-2">
                         {{ form_label(form.photo, "Image de la mission", {'label_attr': {'class': 'block text-sm font-bold text-gray-700 mb-1'}}) }}
                         {{ form_widget(form.photo, {'attr': {'class': 'w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-orange-50 file:text-orange-700 hover:file:bg-orange-100'}}) }}
                         {{ form_errors(form.photo) }}
                    </div>
                </div>

                <div class="pt-4 border-t border-gray-100 mt-6">
                    <button type="submit" class="w-full bg-orange-600 text-white py-3 rounded-lg font-bold hover:bg-orange-700 transition shadow">
                        Publier la mission
                    </button>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}