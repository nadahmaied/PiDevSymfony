{% extends 'baseFront.html.twig' %}

{% block title %}Modifier la Mission{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-12">
    <div class="max-w-3xl mx-auto bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100">
        
        <div class="bg-blue-600 p-6 text-white flex justify-between items-center">
            <h1 class="text-2xl font-bold">Modifier la mission</h1>
            <a href="{{ path('app_assoc_mission_index') }}" class="text-blue-100 hover:text-white transition text-sm flex items-center gap-2">
                <i class="fa-solid fa-arrow-left"></i> Retour
            </a>
        </div>

        <div class="p-8">
            {{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}
                
                {{ form_widget(form) }}

                <div class="pt-6 flex flex-col gap-4">
                    <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg font-bold hover:bg-blue-700 transition shadow">
                        Enregistrer les modifications
                    </button>
                </div>

            {{ form_end(form) }}

            <div class="mt-10 pt-8 border-t border-gray-200">
                <div class="bg-red-50 border border-red-100 rounded-lg p-4 flex justify-between items-center">
                    <div>
                        <h3 class="text-red-700 font-bold text-sm">Supprimer cette mission</h3>
                        <p class="text-red-500 text-xs">Action irréversible.</p>
                    </div>
                    
                    <form method="post" action="{{ path('app_assoc_mission_delete', {'id': mission.id}) }}" onsubmit="return confirm('Êtes-vous sûr ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ mission.id) }}">
                        <button class="bg-white border border-red-200 text-red-600 px-4 py-2 rounded-lg text-sm font-bold hover:bg-red-600 hover:text-white transition">
                            Supprimer
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}