{% extends 'baseFront.html.twig' %}

{% block title %}Mes Missions{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-12">
    
    <div class="flex flex-col md:flex-row justify-between items-center mb-8 gap-4">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">Tableau de bord Association</h1>
            <p class="text-gray-500">
                Gérez vos missions bénévoles 
                <span class="font-bold text-orange-600">({{ pagination.getTotalItemCount }} trouvées)</span>
            </p>
        </div>
        <a href="{{ path('app_assoc_mission_new') }}" class="bg-orange-600 text-white px-6 py-3 rounded-lg font-bold hover:bg-orange-700 transition shadow-lg flex items-center gap-2 transform hover:scale-105">
            <i class="fa-solid fa-plus"></i> Créer une mission
        </a>
    </div>

    <div class="bg-white p-4 rounded-xl shadow-lg border border-gray-100 mb-6">
        <form method="get" class="flex gap-2">
            <div class="relative flex-1">
                <i class="fa-solid fa-magnifying-glass absolute left-4 top-3.5 text-gray-400"></i>
                <input type="text" name="q" value="{{ app.request.query.get('q') }}" placeholder="Rechercher par titre, description ou lieu..." class="w-full pl-12 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-lg focus:bg-white focus:ring-2 focus:ring-orange-200 focus:border-orange-400 outline-none transition">
            </div>
            <button type="submit" class="bg-gray-800 text-white px-6 py-3 rounded-lg font-bold hover:bg-gray-700 transition shadow-md">
                Rechercher
            </button>
            {% if app.request.query.get('q') %}
                <a href="{{ path('app_assoc_mission_index') }}" class="bg-red-50 text-red-600 px-4 py-3 rounded-lg font-bold hover:bg-red-100 transition flex items-center" title="Réinitialiser">
                    <i class="fa-solid fa-xmark"></i>
                </a>
            {% endif %}
        </form>
    </div>

    <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                
                <thead class="bg-gray-50 text-gray-600 uppercase text-xs font-semibold tracking-wider">
                    <tr>
                        <th class="p-4 border-b">Image</th>
                        <th class="p-4 border-b hover:bg-gray-100 cursor-pointer transition">
                            {{ knp_pagination_sortable(pagination, 'Titre & Description', 'm.titre') }}
                        </th>
                        <th class="p-4 border-b hover:bg-gray-100 cursor-pointer transition">
                            {{ knp_pagination_sortable(pagination, 'Lieu', 'm.lieu') }}
                        </th>
                        <th class="p-4 border-b hover:bg-gray-100 cursor-pointer transition">
                            {{ knp_pagination_sortable(pagination, 'Période', 'm.dateDebut') }}
                        </th>
                        <th class="p-4 border-b hover:bg-gray-100 cursor-pointer transition">
                            {{ knp_pagination_sortable(pagination, 'Statut', 'm.statut') }}
                        </th>
                        <th class="p-4 border-b text-center">Actions</th>
                    </tr>
                </thead>

                <tbody class="divide-y divide-gray-100">
                    {# BOUCLE SUR LA PAGINATION #}
                    {% for mission in pagination %}
                        <tr class="hover:bg-orange-50/30 transition group">
                            
                            <td class="p-4 w-24">
                                {% if mission.photo %}
                                    <img src="{{ asset('uploads/missions/' ~ mission.photo) }}" alt="Img" class="w-16 h-16 rounded-lg object-cover shadow-sm border border-gray-200">
                                {% else %}
                                    <div class="w-16 h-16 rounded-lg bg-gray-100 flex items-center justify-center text-gray-400 border border-gray-200">
                                        <i class="fa-solid fa-image text-xl"></i>
                                    </div>
                                {% endif %}
                            </td>
                            
                            <td class="p-4 max-w-xs">
                                <p class="font-bold text-gray-800 text-lg">{{ mission.titre }}</p>
                                <p class="text-xs text-gray-500 truncate mt-1">{{ mission.description }}</p>
                            </td>

                            <td class="p-4 text-sm text-gray-600">
                                <div class="flex items-center gap-2">
                                    <i class="fa-solid fa-location-dot text-orange-400"></i>
                                    {{ mission.lieu }}
                                </div>
                            </td>

                            <td class="p-4 text-sm">
                                <div class="flex flex-col text-gray-500">
                                    <span class="text-xs uppercase font-bold text-gray-400">Du:</span>
                                    <span class="mb-1 text-gray-700">{{ mission.dateDebut ? mission.dateDebut|date('d/m/Y') : 'N/A' }}</span>
                                    
                                    <span class="text-xs uppercase font-bold text-gray-400">Au:</span>
                                    <span class="text-gray-700">{{ mission.dateFin ? mission.dateFin|date('d/m/Y') : 'N/A' }}</span>
                                </div>
                            </td>

                            <td class="p-4">
                                <span class="px-3 py-1 rounded-full text-xs font-bold inline-flex items-center gap-1
                                    {% if mission.statut == 'Ouverte' %} bg-green-100 text-green-700
                                    {% elseif mission.statut == 'Fermée' %} bg-red-100 text-red-700
                                    {% else %} bg-gray-100 text-gray-600 {% endif %}">
                                    
                                    <span class="w-2 h-2 rounded-full 
                                        {% if mission.statut == 'Ouverte' %} bg-green-500
                                        {% elseif mission.statut == 'Fermée' %} bg-red-500
                                        {% else %} bg-gray-500 {% endif %}"></span>
                                    {{ mission.statut }}
                                </span>
                            </td>

                            <td class="p-4">
                                <div class="flex justify-center items-center gap-2">
                                    <a href="{{ path('app_assoc_mission_edit', {'id': mission.id}) }}" class="bg-blue-50 text-blue-600 hover:bg-blue-600 hover:text-white p-2 rounded-lg transition shadow-sm" title="Modifier">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>

                                    <form method="post" action="{{ path('app_assoc_mission_delete', {'id': mission.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette mission ?');" class="inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ mission.id) }}">
                                        <button class="bg-red-50 text-red-600 hover:bg-red-600 hover:text-white p-2 rounded-lg transition shadow-sm" title="Supprimer">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="p-16 text-center text-gray-500">
                                <div class="flex flex-col items-center justify-center">
                                    <div class="bg-gray-50 p-6 rounded-full mb-4">
                                        <i class="fa-regular fa-folder-open text-4xl text-gray-300"></i>
                                    </div>
                                    <h3 class="text-lg font-bold text-gray-700">Aucune mission trouvée</h3>
                                    <p class="mb-6 text-sm">Vous n'avez pas encore publié de mission ou aucune ne correspond à votre recherche.</p>
                                    <a href="{{ path('app_assoc_mission_new') }}" class="text-orange-600 font-bold hover:underline">
                                        Commencer maintenant
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        
        <div class="p-4 border-t border-gray-100 bg-gray-50 flex justify-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
</div>

{# CSS pour la pagination (Style Orange/Gris) #}
<style>
    .pagination { display: flex; gap: 0.5rem; justify-content: center; margin: 0; padding: 0; }
    .pagination span, .pagination a {
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        background: white;
        border: 1px solid #e2e8f0;
        color: #4b5563;
        text-decoration: none;
        font-weight: 500;
        font-size: 0.875rem;
        transition: all 0.2s;
    }
    .pagination a:hover { background: #fff7ed; color: #ea580c; border-color: #fdba74; }
    .pagination .current {
        background: #ea580c;
        color: white;
        border-color: #ea580c;
        font-weight: bold;
    }
</style>
{% endblock %}