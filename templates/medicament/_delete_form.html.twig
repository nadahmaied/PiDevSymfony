<form method="post" action="{{ path('app_medicament_delete', {'id': medicament.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce médicament ?');" class="inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ medicament.id) }}">
    <button class="text-red-600 hover:text-red-900 bg-red-50 px-3 py-1 rounded-lg transition">
        <i class="fa-solid fa-trash-can"></i>
    </button>
</form>
