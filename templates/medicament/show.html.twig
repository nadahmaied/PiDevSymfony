{% extends 'admin_base.html.twig' %}

{% block title %}Médicament : {{ medicament.nomMedicament }}{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Header -->
    <div class="flex items-center justify-between mb-10">
        <div>
            <h1 class="text-4xl font-black text-slate-800 tracking-tight">{{ medicament.nomMedicament }}</h1>
            <p class="text-slate-500 font-medium">Fiche descriptive du produit.</p>
        </div>
        <div class="flex items-center gap-4">
            <a href="{{ path('app_medicament_index') }}" class="bg-slate-100 text-slate-600 px-6 py-3 rounded-2xl font-bold hover:bg-slate-200 transition-all flex items-center gap-2">
                <i class="fa-solid fa-arrow-left"></i>
                Inventaire
            </a>
            <a href="{{ path('app_medicament_edit', {'id': medicament.id}) }}" class="bg-blue-600 text-white px-6 py-3 rounded-2xl font-bold hover:bg-blue-700 shadow-xl shadow-blue-100 transition-all flex items-center gap-2">
                <i class="fa-solid fa-edit"></i>
                Modifier
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Main Info Card -->
        <div class="md:col-span-2 space-y-8">
            <div class="bg-white rounded-[2.5rem] shadow-xl shadow-slate-200/50 p-10 border border-slate-100">
                <h2 class="text-2xl font-black text-slate-800 mb-8 flex items-center gap-3">
                    <i class="fa-solid fa-circle-info text-blue-500"></i>
                    Informations Générales
                </h2>
                
                <div class="grid grid-cols-2 gap-8">
                    <div>
                        <p class="text-slate-400 text-xs font-black uppercase tracking-widest mb-1">Catégorie</p>
                        <p class="text-lg font-bold text-slate-700">{{ medicament.categorie }}</p>
                    </div>
                    <div>
                        <p class="text-slate-400 text-xs font-black uppercase tracking-widest mb-1">ID Produit</p>
                        <p class="text-lg font-bold text-slate-700">#{{ medicament.id }}</p>
                    </div>
                    <div>
                        <p class="text-slate-400 text-xs font-black uppercase tracking-widest mb-1">Dosage</p>
                        <p class="text-lg font-bold text-slate-700">{{ medicament.dosage }}</p>
                    </div>
                    <div>
                        <p class="text-slate-400 text-xs font-black uppercase tracking-widest mb-1">Forme</p>
                        <p class="text-lg font-bold text-slate-700">{{ medicament.forme }}</p>
                    </div>
                </div>
            </div>

            <div class="bg-blue-600 rounded-[2.5rem] p-10 text-white shadow-2xl shadow-blue-100 relative overflow-hidden group">
                <i class="fa-solid fa-shield-virus absolute -right-4 -bottom-4 text-7xl text-white/10 group-hover:scale-110 transition-transform"></i>
                <h3 class="text-xl font-black mb-4">Conseil d'utilisation</h3>
                <p class="text-blue-100 leading-relaxed italic">
                    "Ce médicament doit être conservé dans un endroit frais et sec. Vérifiez toujours l'intégralité du packaging avant utilisation."
                </p>
            </div>
        </div>

        <!-- Sidebar / Secondary Info -->
        <div class="space-y-8">
            <div class="bg-white rounded-[2.5rem] shadow-xl shadow-slate-200/50 p-8 border border-slate-100 flex flex-col items-center text-center">
                <div class="w-20 h-20 bg-blue-50 rounded-3xl flex items-center justify-center text-blue-600 mb-6 shadow-inner">
                    <i class="fa-solid fa-hourglass-half text-3xl"></i>
                </div>
                <p class="text-slate-400 text-xs font-black uppercase tracking-widest mb-2">Expiration</p>
                <p class="text-2xl font-black text-slate-800">
                    {{ medicament.dateExpiration ? medicament.dateExpiration|date('d M Y') : 'Non spécifiée' }}
                </p>
                {% if medicament.dateExpiration and medicament.dateExpiration < date('+3 month') %}
                    <div class="mt-4 px-4 py-2 bg-amber-100 text-amber-700 rounded-xl text-xs font-bold animate-pulse">
                        Expiration proche
                    </div>
                {% endif %}
            </div>

            <div class="bg-slate-800 rounded-[2.5rem] p-8 text-white">
                <h4 class="font-black text-sm uppercase tracking-widest mb-4 opacity-50">Tags</h4>
                <div class="flex flex-wrap gap-2">
                    <span class="px-3 py-1 bg-white/10 rounded-lg text-xs font-bold">{{ medicament.categorie }}</span>
                    <span class="px-3 py-1 bg-white/10 rounded-lg text-xs font-bold">{{ medicament.forme }}</span>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
