{% extends 'baseFront.html.twig' %}

{% block title %}Missions de Bénévolat{% endblock %}

{% block body %}
<div class="flex h-screen overflow-hidden">
    
    <aside class="w-64 bg-white border-r border-gray-200 hidden md:flex flex-col">
        {% include 'partials/_sidebar_front.html.twig' ignore missing %} 
    </aside>

    <main class="flex-1 flex flex-col h-screen overflow-hidden">
        <header class="bg-white border-b border-gray-200 py-4 px-8 flex justify-between items-center shrink-0">
            <h1 class="text-2xl font-bold text-gray-800">Missions de Bénévolat</h1>
            <div class="flex items-center gap-3">
                <div class="text-right hidden sm:block">
                    <p class="text-sm font-bold text-gray-700">{{ app.user ? app.user.fullname : 'Invité' }}</p>
                </div>
                <img src="https://ui-avatars.com/api/?name={{ app.user ? app.user.fullname : 'Guest' }}&background=0D8ABC&color=fff" class="w-10 h-10 rounded-full border border-gray-200">
            </div>
        </header>

        <div class="flex-1 overflow-y-auto p-8 space-y-8">
            
            <div class="bg-gradient-to-r from-orange-500 to-amber-500 rounded-3xl p-8 text-white shadow-xl relative overflow-hidden">
                <div class="relative z-10 max-w-2xl">
                    <h2 class="text-3xl font-bold mb-2">Donnez de votre temps, sauvez des vies.</h2>
                    <p class="text-orange-100 mb-6 text-lg">Rejoignez notre réseau de volontaires.</p>
                </div>
                <i class="fa-solid fa-handshake-angle absolute -bottom-10 -right-10 text-9xl text-white opacity-20 transform -rotate-12"></i>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                
                {% for mission in missions %}
                    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden group hover:shadow-lg transition flex flex-col h-full">
                        <div class="h-48 bg-gray-200 relative overflow-hidden">
                            <img src="{{ mission.photo ? asset('uploads/missions/' ~ mission.photo) : 'https://images.unsplash.com/photo-1593113598332-cd288d649433?w=500' }}" 
                                 alt="{{ mission.titre }}" 
                                 class="w-full h-full object-cover group-hover:scale-105 transition duration-500">
                            
                            <span class="absolute top-3 right-3 bg-white/90 backdrop-blur text-orange-600 text-xs font-bold px-3 py-1.5 rounded-full shadow-sm">
                                <i class="fa-solid fa-clock mr-1"></i> Urgent
                            </span>
                        </div>

                        <div class="p-6 flex flex-col flex-1">
                            <div class="flex items-center gap-2 text-xs text-gray-500 mb-3">
                                <span class="bg-gray-100 px-2 py-1 rounded"><i class="fa-solid fa-location-dot"></i> {{ mission.lieu }}</span>
                                <span class="bg-gray-100 px-2 py-1 rounded"><i class="fa-regular fa-calendar"></i> {{ mission.dateDebut|date('d M') }}</span>
                            </div>
                            
                            <h4 class="font-bold text-xl text-gray-800 mb-2 group-hover:text-orange-600 transition">{{ mission.titre }}</h4>
                            <p class="text-sm text-gray-500 mb-6 flex-1 line-clamp-3">{{ mission.description }}</p>
                            
                            <div class="mt-auto pt-4 border-t border-gray-50 flex items-center justify-between">
                                <span class="text-xs font-bold text-gray-400">Places limitées</span>
                                
                                <a href="{{ path('app_missions_apply', {'id': mission.id}) }}" 
                                   class="bg-orange-50 text-orange-600 px-4 py-2 rounded-lg font-bold text-sm hover:bg-orange-600 hover:text-white transition">
                                    Postuler
                                </a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p class="text-gray-500">Aucune mission disponible pour le moment.</p>
                {% endfor %}

            </div>
        </div>
    </main>
</div>
{% endblock %}