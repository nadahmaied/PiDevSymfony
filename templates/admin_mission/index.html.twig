{% extends 'baseBack.html.twig' %}

{% block title %}Gestion Bénévolat{% endblock %}

{% block body %}
    <header class="bg-white border-b py-4 px-8 flex justify-between items-center shadow-sm z-0">
        <h1 class="text-xl font-bold text-gray-800">Gestion des Missions Bénévoles</h1>
        
        <a href="{{ path('app_admin_missions_new') }}" class="bg-orange-600 hover:bg-orange-700 text-white px-4 py-2 rounded-lg flex items-center gap-2 shadow transition transform hover:scale-105">
            <i class="fa-solid fa-plus"></i> Créer une Mission
        </a>
    </header>

    <div class="flex-1 overflow-y-auto p-8">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <table class="w-full text-left border-collapse">
                
                <thead class="bg-gray-50 text-gray-600 text-xs uppercase">
                    <tr>
                        <th class="px-6 py-4">ID</th>
                        <th class="px-6 py-4">Image</th>
                        <th class="px-6 py-4">Titre & Description</th>
                        <th class="px-6 py-4">Lieu</th>
                        <th class="px-6 py-4">Période</th>
                        <th class="px-6 py-4">Statut</th>
                        <th class="px-6 py-4 text-center">Actions</th>
                    </tr>
                </thead>

                <tbody class="divide-y divide-gray-100 text-sm">
                    {% for mission in missions %}
                        <tr class="hover:bg-orange-50/30 transition">
                            <td class="px-6 py-4 font-mono text-gray-400">#{{ mission.id }}</td>
                            <td class="px-6 py-4">
                                {% if mission.photo %}
                                    <img src="{{ asset('uploads/missions/' ~ mission.photo) }}" alt="Mission" class="w-12 h-12 rounded-full object-cover border border-gray-200 shadow-sm">
                                {% else %}
                                    <div class="w-12 h-12 rounded-full bg-gray-100 flex items-center justify-center text-gray-400">
                                        <i class="fa-solid fa-image"></i>
                                    </div>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4">
                                <p class="font-bold text-gray-800">{{ mission.titre }}</p>
                                <p class="text-xs text-gray-500 truncate w-48">{{ mission.description }}</p>
                            </td>

                            <td class="px-6 py-4">
                                <i class="fa-solid fa-location-dot text-gray-400 mr-1"></i> {{ mission.lieu }}
                            </td>

                            <td class="px-6 py-4 text-gray-600">
                                <span class="block text-xs uppercase text-gray-400">Du:</span>
                                <span class="font-medium">{{ mission.dateDebut ? mission.dateDebut|date('d/m/Y') : 'N/A' }}</span>
                                <span class="block text-xs uppercase text-gray-400 mt-1">Au:</span>
                                <span class="font-medium">{{ mission.dateFin ? mission.dateFin|date('d/m/Y') : 'N/A' }}</span>
                            </td>

                            <td class="px-6 py-4">
                                <span class="px-2 py-1 rounded-full text-xs font-bold
                                    {% if mission.statut == 'Ouverte' %} bg-green-100 text-green-700
                                    {% elseif mission.statut == 'Fermée' %} bg-red-100 text-red-700
                                    {% else %} bg-gray-100 text-gray-600 {% endif %}">
                                    {{ mission.statut }}
                                </span>
                            </td>

                            <td class="px-6 py-4">
                                <div class="flex justify-center gap-3">
                                    <a href="{{ path('app_admin_missions_edit', {'id': mission.id}) }}" class="text-blue-500 hover:bg-blue-50 p-2 rounded transition" title="Modifier">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>

                                    <form method="post" action="{{ path('app_admin_missions_delete', {'id': mission.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette mission ?');" style="display: inline-block;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ mission.id) }}">
                                        <button class="text-red-500 hover:bg-red-50 p-2 rounded transition" title="Supprimer">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center p-10 text-gray-500">
                                <div class="flex flex-col items-center">
                                    <i class="fa-regular fa-folder-open text-4xl mb-3 text-gray-300"></i>
                                    <p>Aucune mission trouvée.</p>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
