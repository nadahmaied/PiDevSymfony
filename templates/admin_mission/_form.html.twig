{{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}

    <div class="bg-gray-50 p-4 rounded-lg border border-gray-100">
        <h3 class="text-sm uppercase tracking-wide text-gray-500 font-bold mb-4 border-b pb-2">Informations Générales</h3>
        
        <div class="grid grid-cols-1 gap-6">
            
            <div class="bg-white p-3 rounded-lg border border-gray-200">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fa-solid fa-camera text-orange-500 mr-1"></i> Image de présentation
                </label>
                {{ form_widget(form.photo, {'attr': {
                    'class': 'block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-orange-50 file:text-orange-700 hover:file:bg-orange-100'
                }}) }}
                <div class="text-red-500 text-xs mt-1">{{ form_errors(form.photo) }}</div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Titre de la mission</label>
                {{ form_widget(form.titre, {'attr': {
                    'class': 'w-full rounded-lg border-gray-300 border p-2.5 text-sm shadow-sm focus:border-orange-500 focus:ring-orange-500',
                    'placeholder': 'Ex: Distribution de repas...'
                }}) }}
                <div class="text-red-500 text-xs mt-1">{{ form_errors(form.titre) }}</div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Description détaillée</label>
                {{ form_widget(form.description, {'attr': {
                    'class': 'w-full rounded-lg border-gray-300 border p-2.5 text-sm shadow-sm focus:border-orange-500 focus:ring-orange-500',
                    'rows': '4',
                    'placeholder': 'Décrivez les tâches et objectifs...'
                }}) }}
                <div class="text-red-500 text-xs mt-1">{{ form_errors(form.description) }}</div>
            </div>
        </div>
    </div>

    <div class="bg-gray-50 p-4 rounded-lg border border-gray-100">
        <h3 class="text-sm uppercase tracking-wide text-gray-500 font-bold mb-4 border-b pb-2">Logistique</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="col-span-1">
                <label class="block text-sm font-medium text-gray-700 mb-1">Lieu / Ville</label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fa-solid fa-location-dot text-gray-400"></i>
                    </div>
                    {{ form_widget(form.lieu, {'attr': {
                        'class': 'pl-10 w-full rounded-lg border-gray-300 border p-2.5 text-sm shadow-sm focus:border-orange-500 focus:ring-orange-500',
                        'placeholder': 'Tunis, Ariana...'
                    }}) }}
                    <div class="text-red-500 text-xs mt-1">{{ form_errors(form.lieu) }}</div>
                </div>
            </div>

            <div class="col-span-1">
                <label class="block text-sm font-medium text-gray-700 mb-1">Statut actuel</label>
                {{ form_widget(form.statut, {'attr': {
                    'class': 'w-full rounded-lg border-gray-300 border p-2.5 text-sm shadow-sm focus:border-orange-500 focus:ring-orange-500'
                }}) }}
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Date de début</label>
                {{ form_widget(form.dateDebut, {'attr': {
                    'class': 'w-full rounded-lg border-gray-300 border p-2.5 text-sm shadow-sm focus:border-orange-500 focus:ring-orange-500'
                }}) }}
                <div class="text-red-500 text-xs mt-1">{{ form_errors(form.dateDebut) }}</div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Date de fin</label>
                {{ form_widget(form.dateFin, {'attr': {
                    'class': 'w-full rounded-lg border-gray-300 border p-2.5 text-sm shadow-sm focus:border-orange-500 focus:ring-orange-500'
                }}) }}
                <div class="text-red-500 text-xs mt-1">{{ form_errors(form.dateFin) }}</div>
            </div>
        </div>
    </div>

    <div class="flex items-center justify-end gap-4 pt-4 border-t border-gray-100">
        <a href="{{ path('app_admin_missions_index') }}" class="text-gray-500 hover:text-gray-700 text-sm font-medium transition">
            Annuler
        </a>
        <button type="submit" class="bg-orange-600 text-white px-6 py-2.5 rounded-lg font-bold shadow hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2 transition transform hover:scale-105">
            {{ button_label|default('Enregistrer la mission') }} <i class="fa-solid fa-check ml-2"></i>
        </button>
    </div>

{{ form_end(form) }}