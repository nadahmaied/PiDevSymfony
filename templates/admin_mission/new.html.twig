{% extends 'baseBack.html.twig' %}

{% block title %}Créer une Mission{% endblock %}

{% block body %}
    <header class="bg-white border-b py-4 px-8 shadow-sm">
        <div class="flex items-center gap-2 text-sm text-gray-500 mb-1">
            <a href="{{ path('app_admin_missions_index') }}" class="hover:text-orange-600">Missions</a>
            <i class="fa-solid fa-chevron-right text-xs"></i>
            <span>Nouveau</span>
        </div>
        <h1 class="text-2xl font-bold text-gray-800">Créer une nouvelle mission</h1>
    </header>

    <div class="flex-1 overflow-y-auto p-8 bg-gray-50">
        <div class="max-w-3xl mx-auto">
            <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
                <div class="h-2 bg-gradient-to-r from-orange-400 to-orange-600"></div>
                
                <div class="p-8">
                    <div class="mb-6">
                        <h2 class="text-lg font-semibold text-gray-700">Formulaire de création</h2>
                        <p class="text-sm text-gray-500">Remplissez les informations ci-dessous pour publier une nouvelle offre.</p>
                    </div>

                    {{ include('admin_mission/_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}